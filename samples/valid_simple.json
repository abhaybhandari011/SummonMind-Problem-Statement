{
  "schema": {
    "version": 1,
    "fields": {
      "firstName": "string",
      "lastName": "string",
      "age": "number",
      "isActive": "boolean"
    },
    "computed": {
      "fullName": "{{firstName}} {{lastName}}"
    }
  },
  "rules": [
    {
      "id": "r1",
      "level": "field",
      "field": "age",
      "condition": "value >= 18",
      "action": "validate"
    }
  ],
  "data": {
    "firstName": "Abhay",
    "lastName": "Bhandari",
    "age": 25,
    "isActive": true
  }
}
